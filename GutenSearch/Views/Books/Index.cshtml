@{
    ViewData["Title"] = "Book Page";
}

<h1>@ViewData["Title"]</h1>

@if (@Model.Count == 0)
{
	<h3>There's nothing here</h3>
}

<ul>
    @foreach (Book book in Model)
    {
			<li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })
                @if(User.IsInRole("Librarian")){
                <a href="/books/edit/@book.BookId" class="emoji">✏️</a>
                <a href="#" data-id="@book.BookId" data-url="/authors/delete/@book.BookId" class="delete-link emoji">❌</a>
                }
            </li>
    }
</ul>