    @Model.FullName 
    @if(User.IsInRole("Librarian"))
    {
        <a href="/authors/edit/@Model.AuthorId" class="emoji">✏️</a>
        <a href="#" data-id="@Model.AuthorId" data-url="/authors/delete/@Model.AuthorId" class="delete-link emoji">❌</a>
    }
</h1>