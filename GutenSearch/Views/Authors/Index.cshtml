@{
    ViewData["Title"] = "Authors Page";
}

<h1>@ViewData["Title"]</h1>

@if (@Model.Count == 0)
{
	<h3>There's nothing here</h3>
}
<ul>
    @foreach (Author author in Model) {
        <li>@Html.ActionLink($"{author.FullName}", "Details", new { id = author.AuthorId })
                @if(User.IsInRole("Librarian")){
                <a href="/author/edit/@author.AuthorId" class="emoji">✏️</a>
                <a href="#" data-id="@author.AuthorId" class="delete-link emoji">❌</a>
                }
            </li>
    }